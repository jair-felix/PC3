@model PC3.Models.usuario;

@{
    ViewData["Title"] = "Formulario";
}
<h1>@ViewData["Title"]</h1>


<form asp-controller="Usuario" asp-action="RegistrarUsuario">
  <div class="form-group">
    <label >Nombre del Producto</label>
    <input type="text" asp-for="nombreproducto" class="form-control" placeholder="Nombre del Producto" required>
  </div>
  <div class="form-group">
    <label >Foto</label>
    <input type="text" asp-for="foto" class="form-control" placeholder="Foto" required>
  </div>
  <div class="form-group">
    <label >Descripcion de la Publicacion</label>
    <textarea type="text" asp-for="descripcion" class="form-control" placeholder="Descripcion de la Publicacion" required>
      </textarea>
  </div>
  <div class="form-group">
    <label >Precio a Pagar</label>
    <input type="text" asp-for="precio" class="form-control" placeholder="Precio a Pagar" required>
  </div>
  <div class="form-group">
    <label >Celular de Contacto</label>
    <input type="text" asp-for="celular" class="form-control" placeholder="Celular de Contacto" required>
  </div>
  <div class="form-group">
    <label >Lugar de compra</label>
    <input type="text" asp-for="lugar" class="form-control" placeholder="Lugar de compra" required>
  </div>
  <div class="form-group">
    <label>Nombre de Usuario</label>
    <input type="text" asp-for="nombreusuario" class="form-control" placeholder="Nombre de Usuario" required>
  </div>

  <button type="submit" class="btn btn-primary">Cargar</button>
</form>
